#############################################################
# .rc for pyscro ZarrLoader
#############################################################

module -name "ZarrLoader" \
-primary "HxUniformScalarField3" \
-package "py_core" \
-category "{Python Scripts}" \
-proc {
        set this [[create HxPythonScriptObject] setLabel "Load Zarr/N5"]
        "$this" startStop hideMaskIncrease
        "$this" filename hideMaskIncrease
        "$this" filename setValue $AMIRA_ROOT/share/python_script_objects/ZarrLoader.pyscro
        "$this" startStop hit 0
        "$this" fire
        if { [exists $PRIMARY] } {
            $this data connect $PRIMARY
            $this fire
        }
    }